{
    "manifest_version": 2,

    "name": "PRAXIS",
    "description": "Médecins Sans Frontières",
    "version": "5.1",
    "icons": {
        "128": "img/icon.png"
    },
    "app": {
        "background": {
            "page": "background.html"
        }
    },
    "permissions": ["alarms", "storage", "unlimitedStorage", "notifications", "https://*/", "http://*/", {
        "fileSystem": ["write", "retainEntries", "directory"]
    }]
}
